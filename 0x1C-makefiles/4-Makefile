CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm
CFLAGS = -Wall -Werror -Wextra -pedantic


all: $(NAME)

$(NAME): $(OBJ)
        $(CC) $(FLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re:
	$(RM) -f $(OBJ)
	$(CC) -c $(SRC)
	$(CC) $(OBJ) -o $(NAME)
