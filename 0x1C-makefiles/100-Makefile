CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ) m.h
	$(CC) $(call value,CFLAGS) $(OBJ) -o $(NAME)

.PHONY: clean oclean fclean re

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re:
	$(MAKE) oclean
	$(MAKE) all
